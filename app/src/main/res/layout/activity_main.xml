<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe">

    <!-- ImageView para el primer logo -->
    <ImageView
        android:id="@+id/logo_upiita"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo_upiita" />

    <!-- TextView para el título central -->
    <TextView
        android:id="@+id/titulo_central"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     INSTITUTO\n     POLITÉCNICO \n     NACIONAL"
        android:textColor="#B0A00C"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <!-- ImageView para el segundo logo -->
    <ImageView
        android:id="@+id/logo_ipn"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo_ipn" />

    <!-- TextView para el subtítulo -->
    <TextView
        android:id="@+id/subtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNIDAD PROFESIONAL INTERDISCIPLINARIA EN INGENIERÍA Y TECNOLOGÍAS AVANZADAS"
        android:textColor="#B0A00C"
        android:background="#213589"
        android:textSize="22sp"
        android:layout_below="@id/logo_upiita"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <!-- ImageView para la imagen central -->
    <ImageView
        android:id="@+id/imagen_central"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo_jardinupiita"
        android:layout_below="@id/subtitulo"/>

    <!-- TextView para el título de la sección -->
    <TextView
        android:id="@+id/titulo_seccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen_central"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="\nDeciga Garcia Rafael \n Ingeniería Telemática \n Grupo 2TM9 \n"
        android:textColor="#fefefe"
        android:background="#771e51"
        android:textSize="20sp"
        android:textStyle="bold|italic"/>

    <!-- ImageView para la imagen del alumno -->
    <ImageView
        android:id="@+id/imagen_alumno"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:src="@drawable/logo_alumno"
        android:layout_below="@id/titulo_seccion"/>

    <!-- TextView para la información del alumno -->
    <TextView
        android:id="@+id/info_alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen_alumno"

        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Programación de Dispositivos \nMóviles \n "
        android:textColor="#fefefe"
        android:background="#771e51"
        android:textSize="20sp"
        android:textStyle="bold|italic"/>



</RelativeLayout>
